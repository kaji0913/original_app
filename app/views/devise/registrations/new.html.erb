<%= render 'shared/header'%>

<h2>新規登録</h2>

<%= form_with model:@user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">名前</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "string-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.text_field :nickname, autofocus: true, class: "string-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "string-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.password_field :password, placeholder:"６文字以上の半角英数字", autocomplete: "new-password", class: "string-field" %>
  </div>    
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード(確認)
      </label>      
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "string-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">年齢</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.text_field :age, autofocus: true, class:"integer-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">業種</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.collection_select(:work_kind_id, WorkKind.all, :id, :name, {}, {class:"select-box"}) %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">役職</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.collection_select(:role_id, Role.all, :id, :name, {}, {class:"select-box"}) %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">社会人歴</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.text_field :work_year, autofocus: true, class:"integer-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">プロフィール</label>
      <span class="indispensable">（任意）</span>
    </div>
    <%= f.text_field :profile, autofocus: true, class: "text-field" %>
  </div>

  <div class="form-group">
      <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render 'shared/footer' %>