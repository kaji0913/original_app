<%= render 'shared/header'%>

<h2>Log in</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "string-field" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.password_field :password, placeholder:"６文字以上の半角英数字", autocomplete: "new-password", class: "string-field" %>
  <div>    

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を記憶する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render 'shared/footer' %>